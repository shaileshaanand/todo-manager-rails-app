<main class="TodoPage">
    <h1 class="TodoPageTitle">
      My Todo-list
    </h1>
    <form method="POST" action="/todos" class="AddTodo">
      <input type="text" name="todo_text" class="AddTodo__Text" placeholder="What's next?">
      <input type="date" name="due_date" class="AddTodo__Date">
      <input type="submit" class="AddTodo__AddButton" value="Add">
    </form>

    <%= render partial: "todo-section",locals: {
        section_title: "Overdue",
        todos: Todo.overdue.incomplete,
        show_due_date: true,
      } %>

    <%= render partial: "todo-section",locals: {
        section_title: "Due Today",
        todos: Todo.due_today,
        show_due_date: false,
      } %>

    <%= render partial: "todo-section",locals: {
        section_title: "Due Later",
        todos: Todo.due_later,
        show_due_date: true,
      } %>
  </main>
